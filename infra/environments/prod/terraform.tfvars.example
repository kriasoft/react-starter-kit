# Production Environment Variables
# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars is automatically loaded by Terraform

# Project name - used as prefix for all resources
project_name = "example"

# Cloudflare credentials
# cloudflare_api_token = "your-cloudflare-api-token"
# cloudflare_account_id = "your-cloudflare-account-id"
# cloudflare_zone_id   = "your-cloudflare-zone-id"  # Required for DNS management

# Domain configuration for production deployment
# domain_name = "example.com"

# External database configuration (e.g., Neon, Supabase, PlanetScale)
# database_host     = "ep-cool-darkness-123456.us-east-2.aws.neon.tech"
# database_name     = "example"
# database_user     = "neondb_owner"
# database_password = "your-database-password-here"