{
  "extends": "../typescript-config/base.jsonc",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/ui": ["./"],
      "@repo/ui/*": ["./*"]
    }
  },
  "include": ["components", "hooks", "lib", "index.ts"],
  "exclude": ["dist", "node_modules"]
}
