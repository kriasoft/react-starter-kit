{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    // https://github.com/emotion-js/emotion/issues/2742
    "jsxImportSource": "@emotion/react",
    "types": ["vite/client", "jest"],
    "outDir": "./dist",
    "moduleResolution": "Node"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist/**/*"]
}
